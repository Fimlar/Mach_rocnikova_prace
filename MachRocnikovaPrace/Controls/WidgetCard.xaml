<UserControl x:Class="Mach_rocnikova_prace.Controls.WidgetCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mach_rocnikova_prace.Controls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="400" d:DesignWidth="400">
    <Border CornerRadius="10" BorderThickness="1" Padding="12">
        <DockPanel LastChildFill="True">
            
            <!--Hlavička-->
            <Grid DockPanel.Dock="Top" Margin="0, 0, 0, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Title, ElementName=root}"
                           FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                
                <!--Tlačítka, menu atd.-->
                <ContentPresenter Grid.Column="1" Content="{Binding HeaderRight, ElementName=root}"
                                  VerticalAlignment="Center"/>
            </Grid>
            
            <!--Tělo-->
            <ContentPresenter Content="{Binding Content, ElementName=root}"/>
        </DockPanel>    
    </Border>
</UserControl>
