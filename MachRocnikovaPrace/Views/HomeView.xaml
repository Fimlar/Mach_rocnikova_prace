<UserControl x:Class="Mach_rocnikova_prace.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Mach_rocnikova_prace.Controls"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1200">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="Auto"/>
            <!-- welcome -->
            <RowDefinition Height="*"/>
            <!-- cards -->
            <RowDefinition Height="Auto"/>
            <!-- footer/tech -->
        </Grid.RowDefinitions>

        <!-- ===== Header ===== -->
        <Border Grid.Row="0"
                Background="{StaticResource BrushPrimary1}"
                CornerRadius="16"
                Margin="24,24,24,12"
                Padding="18"
                SnapsToDevicePixels="True">

            <DockPanel LastChildFill="True">
                <!-- Left: identity -->
                <controls:CompanyIdentity DockPanel.Dock="Left"
                                          VerticalAlignment="Center"
                                          Margin="0,0,18,0" MaxHeight="50"/>

                <!-- Right: project meta (optional) -->
                <StackPanel DockPanel.Dock="Right"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Ročníková práce"
                               FontSize="14"
                               Opacity="0.85"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="WPF • MVVM • EF Core"
                               FontSize="12"
                               Opacity="0.75"
                               HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- Center: title -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Správa členů organizace"
                               FontSize="26"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Aplikace pro evidenci osob, týmů a rolí – navržena jako rozšiřitelný základ"
                               Margin="0,6,0,0"
                               FontSize="14"
                               Opacity="0.85"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ===== Welcome / short description ===== -->
        <Border Grid.Row="1"
                Background="{StaticResource BrushPrimary1}"
                CornerRadius="16"
                Margin="24,0,24,12"
                Padding="18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: intro text -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Co aplikace nabízí"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock FontSize="13"
                               Opacity="0.9"
                               TextWrapping="Wrap">
                        <Run Text="Aplikace slouží jako základní členská databáze. Umožňuje evidovat osoby, přiřazovat jim role a zařazovat je do týmů. "/>
                        <Run Text="Důraz je kladen na přehledné UI a čisté oddělení logiky pomocí architektury MVVM."/>
                    </TextBlock>
                </StackPanel>

                <!-- Right: status / notes -->
                <Border Grid.Column="1"
                        Background="{StaticResource BrushPrimary1}"
                        CornerRadius="12"
                        Padding="14"
                        Margin="16,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Stav projektu"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                            <TextBlock Text="✔" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Evidence osob" Opacity="0.9"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                            <TextBlock Text="✔" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Týmy a role" Opacity="0.9"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                            <TextBlock Text="🕒" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Docházka / komunikace (plánováno)" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ===== Feature cards (main) ===== -->
        <Grid Grid.Row="2" Margin="24,0,24,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1 -->
            <controls:WidgetCard Grid.Column="0"
                                 Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Správa osob"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Evidence členů včetně základních údajů a vazeb na tým a roli."
                               TextWrapping="Wrap"
                               Opacity="0.9"
                               FontSize="13"/>
                    <Separator Margin="0,12,0,12" Opacity="0.35"/>
                    <StackPanel>
                        <TextBlock Text="• přehledné vyhledávání a filtrování"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                        <TextBlock Text="• úpravy přímo v tabulce (DataGrid)"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                        <TextBlock Text="• ukládání změn do databáze"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                    </StackPanel>
                </StackPanel>
            </controls:WidgetCard>

            <!-- Card 2 -->
            <controls:WidgetCard Grid.Column="1"
                                 Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Týmy a role"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Správa týmů a rolí používaných napříč aplikací."
                               TextWrapping="Wrap"
                               Opacity="0.9"
                               FontSize="13"/>
                    <Separator Margin="0,12,0,12" Opacity="0.35"/>
                    <StackPanel>
                        <TextBlock Text="• CRUD operace pro týmy a role"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                        <TextBlock Text="• ochrana proti smazání používaných entit"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                        <TextBlock Text="• jednotný datový přístup přes služby"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                    </StackPanel>
                </StackPanel>
            </controls:WidgetCard>

            <!-- Card 3 -->
            <controls:WidgetCard Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Rozšiřitelnost"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Architektura je připravena pro budoucí moduly (např. docházka)."
                               TextWrapping="Wrap"
                               Opacity="0.9"
                               FontSize="13"/>
                    <Separator Margin="0,12,0,12" Opacity="0.35"/>
                    <StackPanel>
                        <TextBlock Text="• MVVM oddělení View / ViewModel / Model"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                        <TextBlock Text="• Entity Framework Core (Code First, migrace)"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                        <TextBlock Text="• servisní vrstva pro práci s databází"
                                   Opacity="0.9" FontSize="13" Margin="0,2,0,2"/>
                    </StackPanel>
                </StackPanel>
            </controls:WidgetCard>
        </Grid>

        <!-- ===== Footer / technologies ===== -->
        <Border Grid.Row="3"
                Background="{StaticResource BrushPrimary2}"
                CornerRadius="16"
                Margin="24,0,24,24"
                Padding="16">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Left"
                           Text="Technologie: WPF, MVVM, Entity Framework Core, databázové migrace"
                           Opacity="0.85"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
