<UserControl x:Class="Mach_rocnikova_prace.Controls.CompanyIdentity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mach_rocnikova_prace.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="160">
    <Grid Background="{StaticResource BrushPrimary1}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        
        <!--Logo-->
        <Image Grid.Column="0"
               Source="pack://application:,,,/Images/LogoBlue.png"
               Stretch="Uniform"/>

        <!--Název-->
        <TextBlock Grid.Column="1" Text="Lorem" FontSize="30" 
                   Foreground="White"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
