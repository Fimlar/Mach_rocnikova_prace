<Window x:Class="Rocnikovka_first.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Rocnikovka_first.ViewModels"
        mc:Ignorable="d"
        Title="Správa členů" Height="600" Width="1000">
    

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!-- levá část: seznam -->
            <ColumnDefinition Width="3*" />
            <!-- pravá část: detail -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- LEVÁ ČÁST: seznam členů -->
        <DataGrid Grid.Column="0" Grid.Row="0"
                  ItemsSource="{Binding Members}"
                  SelectedItem="{Binding SelectedMember, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,10,10">
            <DataGrid.Columns>
                <!-- Ukázkově pár sloupců, další můžeš doplnit -->
                <DataGridTextColumn Header="ID" Binding="{Binding Member_ID}" Width="60" />
                <DataGridTextColumn Header="Příjmení" Binding="{Binding Last_name}" Width="*" />
                <DataGridTextColumn Header="Jméno" Binding="{Binding First_name}" Width="*" />
                <DataGridCheckBoxColumn Header="Aktivní" Binding="{Binding Active}" Width="80" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- PRAVÁ ČÁST: detail vybraného člena -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,10">
            <TextBlock Text="Detail člena" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />

            <!-- Příjmení -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Příjmení:" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedMember.Last_name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="200" />
            </StackPanel>

            <!-- Jméno -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Jméno:" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedMember.First_name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="200" />
            </StackPanel>

            <!-- Datum narození (zjednodušeně TextBox; klidně lze použít DatePicker) -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Datum narození:" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedMember.Date_of_birth, Mode=TwoWay, StringFormat=d}"
                         Width="200" />
            </StackPanel>

            <!-- Zdravotní pojišťovna (název) -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Zdrav. pojišťovna:" Width="120" VerticalAlignment="Center" />
                <TextBox Text="{Binding SelectedMember.Health_insurance_name, Mode=TwoWay}"
                         Width="200" />
            </StackPanel>

            <!-- Aktivní -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Aktivní:" Width="120" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding SelectedMember.Active, Mode=TwoWay}" />
            </StackPanel>

            <!-- atd. – sem si postupně přidáš další vlastnosti Member -->
        </StackPanel>

        <!-- DOLNÍ ŘÁDEK: tlačítka pro CRUD -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Načíst" Width="80" Margin="5,0,0,0"
                    Command="{Binding LoadCommand}" />
            <Button Content="Nový" Width="80" Margin="5,0,0,0"
                    Command="{Binding NewCommand}" />
            <Button Content="Uložit" Width="80" Margin="5,0,0,0"
                    Command="{Binding SaveCommand}" />
            <Button Content="Smazat" Width="80" Margin="5,0,0,0"
                    Command="{Binding DeleteCommand}" />
        </StackPanel>
    </Grid>
</Window>
