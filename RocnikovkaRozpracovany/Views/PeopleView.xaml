<UserControl x:Class="Mach_rocnikova_prace.Views.PeopleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mach_rocnikova_prace.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>
        <!--Panel hledání-->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10, 0">
            <TextBox Text="Zadej Id" Width="200" VerticalAlignment="Center"/>
            <Button x:Name="findBtn" Content="Hledat" Margin="30, 0"/>
        </StackPanel>
        
        <!--Zobrazení výsledku hledání-->
        <ListView Grid.Row="1" Name="peopleListView" ItemsSource="{Binding People}"
                  Background="{StaticResource BrushPrimary3}"/>
    </Grid>
</UserControl>
