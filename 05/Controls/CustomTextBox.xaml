<UserControl x:Class="Mach_rocnikova_prace.Controls.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mach_rocnikova_prace.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <Grid Background="White">
        <TextBox x:Name="txtInput" VerticalAlignment="Center" FontSize="14"
                 FontWeight="Light" Background="Transparent" TextChanged="txtInput_TextChanged"
                 Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock x:Name="tbPlaceholder" Text="{Binding PlaceHolder}" FontSize="14"
                   Foreground="DarkGray" VerticalAlignment="Center" Margin="5, 0"
                   Panel.ZIndex="-1"/>
        <Button x:Name="btnClear" Width="30" HorizontalAlignment="Right" Content="X"
                Background="Transparent" Foreground="LightGray" BorderThickness="0"
                Click="btnClear_Click"/>
    </Grid>
</UserControl>
